<%- include('../../components/template') %>

<div class="p-4 sm:p-6 lg:p-8">
	<div class="sm:flex sm:items-center">
		<div class="sm:flex-auto">
			<h1 class="text-2xl font-semibold text-neutral-900 dark:text-white">Panel Appearance</h1>
			<p class="mt-2 text-sm text-neutral-700 dark:text-neutral-400">Customize the look and feel of your panel.</p>
		</div>
	</div>

	<div class="mt-8 grid grid-cols-1 gap-6 md:grid-cols-2">
		<!-- Logo Section -->
		<div class="bg-white dark:bg-neutral-900 shadow-sm ring-1 ring-neutral-900/5 rounded-xl p-6">
			<h2 class="text-lg font-medium text-neutral-900 dark:text-white">Panel Logo</h2>
			<div class="mt-4">
				<div class="flex items-center gap-4">
					<img src="<%= settings.logo %>" alt="Current Logo" class="h-16 w-16 rounded-xl">
					<form action="/admin/appearances/logo" method="POST" enctype="multipart/form-data" class="flex-1">
						<input type="file" name="logo" accept="image/*" class="block w-full text-sm text-neutral-500 file:mr-4 file:py-2 file:px-4 file:rounded-xl file:border-0 file:text-sm file:font-medium file:bg-neutral-100 file:text-neutral-700 hover:file:bg-neutral-200 dark:file:bg-neutral-800 dark:file:text-neutral-300">
						<button type="submit" class="mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-xl text-white bg-neutral-900 hover:bg-neutral-800 dark:bg-neutral-800 dark:hover:bg-neutral-700">
							Update Logo
						</button>
					</form>
				</div>
			</div>
		</div>

		<!-- Theme Section -->
		<div class="bg-white dark:bg-neutral-900 shadow-sm ring-1 ring-neutral-900/5 rounded-xl p-6">
			<h2 class="text-lg font-medium text-neutral-900 dark:text-white">Theme Settings</h2>
			<form action="/admin/appearances/theme" method="POST" class="mt-4 space-y-4">
				<!-- Primary Color -->
				<div>
					<label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">Primary Color</label>
					<input type="color" name="primaryColor" value="<%= settings.theme?.primaryColor || '#000000' %>" class="mt-1 block w-full rounded-xl">
				</div>

				<!-- Accent Color -->
				<div>
					<label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">Accent Color</label>
					<input type="color" name="accentColor" value="<%= settings.theme?.accentColor || '#4F46E5' %>" class="mt-1 block w-full rounded-xl">
				</div>

				<!-- Default Theme -->
				<div>
					<label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">Default Theme</label>
					<select name="defaultTheme" class="mt-1 block w-full rounded-xl border-neutral-300 dark:border-neutral-700 dark:bg-neutral-800">
						<option value="light" <%= settings.theme?.default === 'light' ? 'selected' : '' %>>Light</option>
						<option value="dark" <%= settings.theme?.default === 'dark' ? 'selected' : '' %>>Dark</option>
						<option value="system" <%= settings.theme?.default === 'system' ? 'selected' : '' %>>System</option>
					</select>
				</div>

				<button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-xl text-white bg-neutral-900 hover:bg-neutral-800 dark:bg-neutral-800 dark:hover:bg-neutral-700">
					Save Theme Settings
				</button>
			</form>
		</div>
	</div>
</div>